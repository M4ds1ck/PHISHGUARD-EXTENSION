    ],
    "financial": [
      "banking", "payment", "transaction", "wallet", "billing",
      "invoice", "refund", "prize", "winner", "claim"
    ],
    "security_alerts": [
      "alert", "warning", "notification", "activity", "detected",
      "breach", "compromised", "unauthorized", "suspicious"
    ],
    "social_engineering": [
      "update", "restore", "recover", "reset", "unlock", "reactivate",
      "confirm-identity", "verify-account", "secure-account"
    ],
    "notes": "Keywords commonly used in phishing URLs and content"
  },
  
  "urlShorteners": [
    "bit.ly", "tinyurl.com", "goo.gl", "t.co", "ow.ly", "is.gd",
    "buff.ly", "adf.ly", "bl.ink", "lnkd.in", "shorte.st", "mcaf.ee",
    "su.pr", "bc.vc", "youtu.be", "j.mp", "tr.im", "cli.gs",
