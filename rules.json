  "suspiciousKeywords": {
    "urgent_action": [
      "verify", "confirm", "urgent", "immediately", "action-required",
      "expire", "suspended", "locked", "limited", "unusual"
    ],
    "authentication": [
      "login", "signin", "authenticate", "validation", "security",
